#!/bin/bash

# Run all test scenarios based on the current build.
# See "./runtests-sql -h" and "./report-sql -h" for more details.
# We assume that this script runs in an xvfb environment.

if [ "$BUILD_NUMBER" = "" ]; then
 export BUILD_NUMBER=`date +%Y%m%d%H%M%S`
 fi

MYDIR=`pwd $0`
cd $MYDIR
./runtests-sql -r
./report-sql -d 40 # 35 is the longest currently, for the TeX output it is good to know the exact file name

# Run ./check-sums after this.
